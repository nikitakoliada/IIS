@model IIS.Models.Borrow

@{
    ViewData["Title"] = "Change borrow state";
}

<h1>Change borrow state</h1>

<div>
    <h4>Borrow</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FromDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FromDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Equipment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Equipment.Id)
        </dd>
    </dl>

    <form asp-action="ChangeState" method="post">
        <input type="hidden" asp-for="Id"/>
        <div class="form-group">
            <label for="State" class="control-label"></label>
            <select id="State" name="State" class="form-control" asp-items="ViewBag.NextPossibleStates"></select>
        </div>
        <input type="submit" value="Change State" class="btn btn-danger"/> |
        <a asp-action="Requests">Back to List</a>
    </form>
</div>